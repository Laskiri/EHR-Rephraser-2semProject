extends layout

block content
  body
    script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js")
    script(src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js")
    

    div(class="header-wrapper fixed-top")
      header(class="fixed-top d-flex align-items-center")

        div(class="container d-flex justify-content-between")

          div(class='logo')
            h3 Electronic Health Record Translation

          nav(class='navbar')
            ul
              li
                a(class='nav-link scrollto active' href='#home') Home
              li
                a(class='nav-link scrollto' href='#about') About
              li
                a(class='nav-link scrollto' href='FAQ') FAQ
              li(class='dropdown')
                a(href='#functions' class="function-wrapper")
                  span Functions
                  <span class="material-icons">keyboard_arrow_down</span>
                  i(class='bi bi-chevron-down')
                ul
                  li
                    a(href='#') Function 1
                  li
                    a(href='#') Function 2
                  li 
                    a(href='#') Function 3
                  li 
                    a(href='#') Function 4
                
    main 
      div(class="main-column")
        article(class="section-one")
          div(class="about")
            h2(id="about") About
            p Insert your medical journal and get a simplified version

          div(class="input-wrapper")
            div(class="input-box")
              h5 Your EHR
              div(class="input-area-container paste-area-container")
                textarea.input(class="paste-area-field" id="input-text" placeholder="Input Your EHR here...")
                button(type="text" class="paste-text-button")
                  <span class="material-icons">content_paste</span>
            button.button(onclick="TextPromptToAI()") Translate
          div(class="output-wrapper")
            div(class="output-box")
              h5 Translated EHR
              div(class="output-area-container copy-area-container")
                div.output(id="output-area" class="copy-area-field" data-placeholder="Rephrased EHR will appear here")
                div(class="copy-wrapper")
                  button(type="text" class="copy-text-button")
                    <span class="material-icons">content_copy</span>
                  div(class="copy-message")
            div(class="output-buttons-wrapper")
                button.button(onClick = 'Helloworld()' id="functions") Function 1   
                button.button(onClick = 'Helloworld()') Function 2
          
        article(class="reviews")
          h2.align.center Rate us!
          p How was your experience?
          <form class = "container" method="post" action="/Home">
            <div class="form-group">
              <input class = "form-control" name="title">
            </div>
            <div class="form-group">
              <textarea class = "form-control" name="content"></textarea>
            </div>
            <button>add to mongodb</button>
          </form>
            <div class="rating">
              <div class="like grow">
                <i type="number" reviewjjj="1" id="like" class="fa fa-thumbs-up fa-3x like" aria-hidden="true"></i>
              </div>
              <div class="dislike grow">
                <i id="dislike"class="fa fa-thumbs-down fa-3x like" aria-hidden="true"></i>
              </div>
            </div>

      div(class="testimonials-clean")
        div(class="container")
          div(class="intro")
            h2(class="text-center") Reviews
            p(class="text-center") Our customers love us! Read what they have to say below
          div(class="row people")

            div(class="col-md-6 col-lg-4 item")
              div(class="box")
                p(class="description") Great service! Now I finally understand my medical journal.
              div(class="author")
                img(src="assets/img/testimonial-1.jpg" class="rounded-circle" width="50" height="50", alt="")
                h5(class="name") Ben Johnson 
                p(class="title") CEO of Company Inc.

            div(class="col-md-6 col-lg-4 item")
              div(class="box")
                p(class="description") This is a life changer! It's easy and free to use at no additional cost.
              div(class="author")
                img(src="assets/img/testimonial-2.jpg" class="rounded-circle" width="50" height="50", alt="")
                h5(class="name") Kate Oxwell 
                p(class="title") CEO of Company Inc.

            div(class="col-md-6 col-lg-4 item")
              div(class="box")
                p(class="description") Excellent! Before I didn't understand what my doctor had written, but it all changed after applying my journal into this service!
              div(class="author")
                img(src="assets/img/testimonial-3.jpg" class="rounded-circle" width="50" height="50", alt="")
                h5(class="name") Sam Hemmington 
                p(class="title") CEO of Company Inc.
                
      div(class="google-clean")
        div(class="container")
          div(class="intro")
            h2(class="text-center") Doctors Near You
            p(class="text-center") Please consult your doctor for personalized medical advice
