extends layout

block content
  body
    script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js")
    script(src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js")


    header(class="fixed-top d-flex align-items-center")

      div(class="container d-flex justify-content-between")

        div(class='logo')
          h3 Electronic Health Record Translator

        nav(class='navbar')
          ul
            li
              a(class='nav-link scrollto active' href='#home') Home
            li
              a(class='nav-link scrollto' href='#about') About
            li
              a(class='nav-link scrollto' href='#FAQ') FAQ
            li(class='dropdown')
              a(href='#functions')
                span Functions
                i(class='bi bi-chevron-down')
              ul
                li
                  a(href='#') Function 1
                li
                  a(href='#') Function 2
                li 
                  a(href='#') Function 3
                li 
                  a(href='#') Function 4
    main 
      article(class="section-one")
        div(class="about")
          h2(id="about") About
          p Insert your medical journal and get a simplified version

        div(class="input-box")
          h5 Your EHR
          textarea.input(id="input-text" placeholder="Input Your EHR here...")
        
        button.button(onclick="outputText()") Translate
     
        div(class="output-box")
          h5 Translated EHR
          div.output(id="output-area")

        button.button(onClick = 'Helloworld()' id="functions") Function 1   
        button.button(onClick = 'Helloworld()') Function 2
        
      article(class="reviews")
        h2 Reviews
        p How many stars would you like to give our service?
        button(class='button' onClick = 'Helloworld()') Send
        
      footer
          p Â© P2 Projekt 2023. All Rights Reserved

      